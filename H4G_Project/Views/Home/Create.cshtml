@model H4G_Project.Models.Application

@{
    ViewData["Title"] = "Create Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("NewApplication", "Application", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
    {
        <h3>Caregiver Information</h3>
        <p>
            Caregiver Full Name :
            @Html.TextBoxFor(m => m.CaregiverName, new { placeholder = "Full Name", required = "required" })
        </p>
        <p>
            Caregiver Occupation :
            @Html.TextBoxFor(m => m.Occupation, new { placeholder = "Occupation", required = "required" })
        </p>
        <p>
            Email Address :
            @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "Email", required = "required" })
        </p>
        <p>
            Contact Number :
            @Html.TextBoxFor(m => m.ContactNumber, new { type = "tel", placeholder = "Phone Number", required = "required" })
        </p>

        <h3>Family Member Information</h3>
        <p>
            Full Name :
            @Html.TextBoxFor(m => m.FamilyMemberName, new { placeholder = "Full Name", required = "required" })
        </p>
        <p>
            Disability Type :
            @Html.DropDownListFor(m => m.DisabilityType,
            new SelectList(new[] {
                new { Value = "intellectual", Text = "Intellectual Disability" },
                new { Value = "physical", Text = "Physical Disability" },
                new { Value = "developmental", Text = "Developmental Disability" },
                new { Value = "others", Text = "Others" }
                }, "Value", "Text"),
                "-- Select --",
                new { required = "required" })
    </p>
    <p>
        Additional Notes :
        @Html.TextAreaFor(m => m.Notes, new { placeholder = "Any relevant information" })
    </p>

    <h3>Supporting Documents</h3>
    <p>
        Upload Medical Report :
        <input type="file" name="medicalReport" accept=".pdf,.doc,.docx,.jpg,.png" required />
    </p>
    <p>
        Upload Identification (NRIC/Passport) :
        <input type="file" name="idDocument" accept=".pdf,.jpg,.png" required />
    </p>

    <input type="submit" value="Submit Application" />
        }
</div>