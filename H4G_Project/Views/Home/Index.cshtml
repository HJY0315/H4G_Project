@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">

<style>
    /* ===================== GLOBAL FIX ===================== */
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        font-family: "Poppins", sans-serif;
        background-color: #F5F9FC;
    }

    a {
        color: #92badd;
        display: inline-block;
        text-decoration: none;
        font-weight: 400;
    }

    h2 {
        text-align: center;
        font-size: 16px;
        font-weight: 600;
        text-transform: uppercase;
        display: inline-block;
        margin: 40px 8px 10px 8px;
        color: #cccccc;
    }

    /* ===================== STRUCTURE ===================== */
    .wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        min-height: 100vh;
        padding: 20px;
    }

    #formContent {
        border-radius: 10px;
        background: #ffffff;
        width: 90%;
        max-width: 450px;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        padding: 30px 0;
    }

    #formFooter {
        background-color: #f6f6f6;
        border-top: 1px solid #dce8f1;
        padding: 25px;
        border-radius: 0 0 10px 10px;
    }

    /* ===================== TABS ===================== */
    h2.inactive {
        color: #cccccc;
    }

    h2.active {
        color: #0d0d0d;
        border-bottom: 2px solid #5fbae9;
    }

    /* ===================== FORM ===================== */
    input[type=button],
    input[type=submit],
    input[type=reset] {
        background-color: #56baed;
        border: none;
        color: white;
        padding: 15px 80px;
        text-transform: uppercase;
        font-size: 13px;
        box-shadow: 0 10px 30px rgba(95, 186, 233, 0.4);
        border-radius: 5px;
        margin: 10px 0 30px;
        transition: all 0.3s ease-in-out;
    }

        input[type=button]:hover {
            background-color: #39ace7;
        }

    input[type=text],
    input[type=email],
    input[type=password] {
        background-color: #f6f6f6;
        border: none;
        color: #0d0d0d;
        padding: 15px;
        margin: 8px 0;
        width: 85%;
        font-size: 16px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

    input:focus {
        background-color: #ffffff;
        border-bottom: 2px solid #5fbae9;
        outline: none;
    }

    /* ===================== ANIMATIONS ===================== */
    .fadeInDown {
        animation: fadeInDown 1s both;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-40px);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }

    .fadeIn {
        opacity: 0;
        animation: fadeIn 1s forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .fadeIn.first {
        animation-delay: 0.4s;
    }

    .fadeIn.second {
        animation-delay: 0.6s;
    }

    .fadeIn.third {
        animation-delay: 0.8s;
    }

    .fadeIn.fourth {
        animation-delay: 1s;
    }

    * {
        box-sizing: border-box;
    }
</style>

<div class="wrapper fadeInDown">
    <div id="formContent">

        <!-- Tabs -->
        <h2 class="User active underlineHover">User Sign In</h2>
        <h2 class="Staff inactive underlineHover">Staff Sign In</h2>

        <!-- User Login -->
        <form id="memberForm">
            <h3>Sign In as User</h3>
            <input type="email" id="memberEmail" placeholder="Email" required />
            <input type="password" id="memberPassword" placeholder="Password" required />
            <input type="button" value="Log In" onclick="loginUser()" />
            <div>
                <a href="/User/ResetPassword" style="color:#0082c6;">Reset Password</a>
            </div>
        </form>

        <!-- Staff Login -->
        <form id="staffForm" style="display:none;">
            <h3>Sign In as Staff</h3>
            <input type="email" id="staffEmail" placeholder="Email" required />
            <input type="password" id="staffPassword" placeholder="Password" required />
            <input type="button" value="Log In" onclick="loginStaff()" />
            <span style="color:red;">@TempData["StaffMessage"]</span>
        </form>

    </div>
</div>

<!-- ===================== FIREBASE ===================== -->
<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js";
    import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js";

    const firebaseConfig = {
        apiKey: "AIzaSyBDT4DVv_xmS1C_1WTOpmnlU4WqmqhrOfI",
        authDomain: "squad-60b0b.firebaseapp.com",
        projectId: "squad-60b0b",
        storageBucket: "squad-60b0b.appspot.com",
        messagingSenderId: "219668334828",
        appId: "1:219668334828:web:5df0f3df3ed9a17e5a7dc9"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    window.loginUser = async function () {
        const email = memberEmail.value;
        const password = memberPassword.value;

        try {
            const cred = await signInWithEmailAndPassword(auth, email, password);
            const token = await cred.user.getIdToken();

            const res = await fetch("/User/FirebaseLogin", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ token })
            });

            if (res.ok) window.location.href = "/User";
            else alert("Invalid user login");
        } catch (err) {
            alert(err.message);
        }
    };

    window.loginStaff = async function () {
        const email = staffEmail.value;
        const password = staffPassword.value;

        try {
            const cred = await signInWithEmailAndPassword(auth, email, password);
            const token = await cred.user.getIdToken();

            const res = await fetch("/Staff/FirebaseLogin", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ token })
            });

            if (res.ok) window.location.href = "/Staff";
            else alert("Invalid staff login");
        } catch (err) {
            alert(err.message);
        }
    };
</script>

<script>
    const memberTab = document.querySelector(".User");
    const staffTab = document.querySelector(".Staff");
    const memberForm = document.getElementById("memberForm");
    const staffForm = document.getElementById("staffForm");

    memberTab.onclick = () => {
        memberTab.classList.add("active");
        staffTab.classList.remove("active");
        staffTab.classList.add("inactive");
        memberForm.style.display = "block";
        staffForm.style.display = "none";
    };

    staffTab.onclick = () => {
        staffTab.classList.add("active");
        memberTab.classList.remove("active");
        memberTab.classList.add("inactive");
        staffForm.style.display = "block";
        memberForm.style.display = "none";
    };
</script>
